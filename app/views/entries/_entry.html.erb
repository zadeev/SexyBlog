    <p>
      <%= entry.user.name %>
    at
      <%= entry.created_at.to_formatted_s(:long)  %>
    says:

      <p>
        <%= link_to entry.header, entry %>
        
      </p>

      <p>
        <%= raw entry.body %>
      </p>
    </p>

    


    <% if entry.user_id == session[:user_id] or current_user.try(:admin)  %>
